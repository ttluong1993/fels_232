<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="search_form">
  <div class="row form-group form-group-lg col-md-offset-3">
    <%= form_tag "categories", action: :index, method: :get, remote: true do %>
      <div class="col-md-6">
        <%= text_field_tag :search, params[:search], placeholder: t(".placeholder"),
          class: "form-control" %>
      </div>
      <%= hidden_field_tag :order, params[:order], id: "hidden_order" %>
      <div class="col-md-2">
        <%= submit_tag t(".search"), class: "btn btn-lg btn-info" %>
      </div>   
    <% end %>
  </div>
  <div class="row">
    <%= form_tag("categories", action: :index, method: :get, remote: true) do %>
      <%= label_tag t(".order_by"), nil, class: "col-md-1" %>
      <%= select_tag :order, options_for_select(order_options, "name_asc"),
        class: "col-md-2" %>
      <%= hidden_field_tag :search, params[:search], id: "hidden_search" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div id="categories_list">
    <%= render "shared/categories_list" %>
  </div>
</div>
