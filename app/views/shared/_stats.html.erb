<div class="stats">
  <div class="learned_info">
    <%= link_to user_words_path @user do %>
      <span>
        <%= t(".learned") %>
        <%= pluralize Word.learned_by(current_user).count, t(".word") %>
      </span>
    <% end %>
  </div>
  <div class="follow_info">
    <%= link_to user_relationships_path user_id: @user.id,
      relationship: "following" do %>
      <strong id="following" class="stat">
        <%= @user.following.count %>
      </strong>
      <%= t ".following" %>
    <% end %>
    <%= link_to user_relationships_path user_id: @user.id, 
      relationship: "followers" do %>
      <strong id="followers" class="stat">
        <%= @user.followers.count %>
      </strong>
      <%= t ".followers" %>
    <% end %>
  </div>
</div>
